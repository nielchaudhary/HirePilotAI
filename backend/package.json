{
  "name": "ninja",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "pnpm run madge:check-build && tsc -b",
    "start": "node -r dotenv/config build/app.js",
    "dev": "cross-env DEBUG=HirePilot* ts-node-dev --respawn --transpile-only src/app.ts",
    "watch": "tsc -w",
    "madge:check-build": "tsc -b && madge --circular --extensions js ./build",
    "lint:check": "eslint . --ext .ts,.tsx src",
    "madge": "madge --circular --extensions ts,js src/",
    "check-deps": "depcheck",
    "postinstall": "pnpm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.2",
    "cross-env": "^7.0.3",
    "debug": "^4.4.1",
    "express": "^5.1.0",
    "express-router": "^0.0.1"
  },
  "devDependencies": {
    "madge": "^8.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
